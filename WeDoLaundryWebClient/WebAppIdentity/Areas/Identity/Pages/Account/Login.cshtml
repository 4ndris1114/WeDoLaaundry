@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<html>
<head>
    <link rel="stylesheet" href="~/css/loginpage.css">
</head>

<body>
<h1>@ViewData["Title"]</h1>
        <div class="login-form-container">
        <section>
            <form id="account" method="post">
                <header> - Enter your login credentials - </header>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="input-wrapper">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="your@email.com" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="input-wrapper">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div>
                    @*<p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>*@
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    @*<p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>*@
                </div>
            </form>
        </section>
    </div>
    @*<div class="col-md-8 col-md-offset-2">
        <section>
        </section>
    </div>*@
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
    </html>