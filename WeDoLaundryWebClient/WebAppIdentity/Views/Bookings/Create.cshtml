@model WebAppIdentity.Models.BookingForm

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="date-time">
                <div class="form-group">
                    <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
                    <label asp-for="PickUpDay"></label>
                    <select asp-for="PickUpDay" class="form-control days" asp-items="@(new SelectList(ViewBag.ListofDays, "Value", "Text"))"></select>
                </div>
                <div class="form-group">
                    <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
                    <label asp-for="PickUpTimeSlot"></label>
                    <select asp-for="PickUpTimeSlot" class="form-control slots" asp-items="@(new SelectList(ViewBag.ListofSlots, "Value", "Text"))"></select>
                </div>
            <div class="date-time">
                <div class="form-group">
                    <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
                    <label asp-for="ReturnDay"></label>
                    <select asp-for="ReturnDay" class="form-control days" asp-items="@(new SelectList(ViewBag.ListofDays, "Value", "Text"))"></select>
                </div>
                <div class="form-group">
                    <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
                    <label asp-for="ReturnTimeSlot"></label>
                     <select asp-for="ReturnTimeSlot" class="form-control slots" asp-items="@(new SelectList(ViewBag.ListofSlots, "Value", "Text"))"></select>
                </div>
            <div class="form-group">
                <label asp-for="PickUpAddress" class="control-label"></label>
                <input asp-for="PickUpAddress" class="form-control" />
                <span asp-validation-for="PickUpAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReturnAddress" class="control-label"></label>
                <input asp-for="ReturnAddress" class="form-control" />
                <span asp-validation-for="ReturnAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmountOfBags" class="control-label"></label>
                <input asp-for="AmountOfBags" class="form-control" />
                <span asp-validation-for="AmountOfBags" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script>
    const dropDownSlotEl = document.querySelector(".slots");
    const withoutDuplicates = [];
    for (let x = 0; x < dropDownSlotEl.length; x++) {
        if (!withoutDuplicates.includes(dropDownSlotEl.options[x].value)) {
            withoutDuplicates.push(dropDownSlotEl.options[x].value);
        } else {
            dropDownSlotEl.options.remove(x);
        }
    }
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


}