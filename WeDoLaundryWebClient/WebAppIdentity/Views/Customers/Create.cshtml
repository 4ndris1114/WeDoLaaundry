@model WebAppIdentity.Models.Customer


@{
    ViewData["Title"] = "Create account";
}

<html>

<head>
    <link rel="stylesheet" href="~/css/loginpage.css">
</head>

<h1 style="margin-top:10px">Give us some more information about you</h1>


<div class="row">

    <div class="col-md-4 login-form-container create-customer">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div class="form-group">
            <label asp-for="Id" class="control-label"></label>
            <input asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control input_create_customer" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control input_create_customer" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control input_create_customer" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostalCode" class="control-label"></label>
                <input asp-for="PostalCode" class="form-control input_create_customer" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control input_create_customer" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control input_create_customer" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            @*<div class="form-group">
            <label asp-for="CustomerType" class="control-label"></label>
            <select asp-for="CustomerType" name="customertype" id="selectCustomertype" class="form-control">
            <option value="nosub">0</option>
            <option value="normalsub">1</option>
            <option value="premiumsub">2</option>
            </select>
            <span asp-validation-for="CustomerType" class="text-danger"></span>
            </div>*@

            <div class="form-group submit_placement">
                <p style="margin-right:30px">
                    <a asp-controller="Identity" asp-action="Account/Manage">Back to home page</a>
                </p>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <h1>@ViewBag.message</h1>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

</html>